<div class="new-todo_item">
  <h3> Bucket   </h3>

  <%= form_for @todo_item, :remote => true do |f| %>
  

    <div class="field">
      <%= f.label :name%>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :completed%>
      <%= f.text_field :completed %>
    </div>
    <div class="field">
      <%= f.submit %>
    </div>
  <% end %>
</div>


